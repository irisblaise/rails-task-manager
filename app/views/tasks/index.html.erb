<h1>Task manager</h1>

<ul>
  <% @tasks.each do |task| %>
  <li><%= link_to "#{task.title}", task_path(task.id) %>
      <%= link_to "destroy", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>

  </li>
  <% end %>
</ul>

<%= link_to "add a new task", new_tasks_path %>

